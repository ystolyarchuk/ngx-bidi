{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngx-bidi": {
      "projectType": "library",
      "root": "projects/ngx-bidi",
      "sourceRoot": "projects/ngx-bidi/src",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-bidi/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ngx-bidi/src/test.ts",
            "tsConfig": "projects/ngx-bidi/tsconfig.spec.json",
            "karmaConfig": "projects/ngx-bidi/karma.conf.js",
            "codeCoverage": true,
            "codeCoverageExclude": [
              "**/test.ts",
              "**/*.spec.ts",
              "**/public-api.ts"
            ]
          }
        }
      }
    }
  }
}
